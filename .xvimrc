" Shortcuts
let mapleader = ","
let maplocalleader = ","
inoremap jk <esc>
inoremap <esc> <nop>

" Classic backspace
set backspace=indent,eol,start

" Classic Tab indents
nnoremap <Tab> >>_
nnoremap <S-Tab> <<_
inoremap <S-Tab> <C-D>
vnoremap <Tab> >gv
vnoremap <S-Tab> <gv

" Switch splits easier
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

" Align on paste
:nnoremap p p=`]

" quick open
nnoremap ji :xcmenucmd Open Quickly...<CR>
